{
    "husky": {
        "hooks": {
            "pre-push": "make lint pytest",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g './git/commitlint.js'"
        }
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        },
        "cz-customizable": {
            "config": "git/commitizen.js"
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^7.2.1",
        "cz-customizable": "^5.3.0",
        "husky": "^1.3.1"
    }
}
